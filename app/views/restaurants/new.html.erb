<h1 class="text-center">New Restaurant</h1>
<div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <%= simple_form_for [@restaurant] do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
          <%= f.submit "Add", class: "btn btn-primary form-control" %>
        <% end %>
        <br>
        <%= link_to "Back", restaurants_path, class: "btn btn-primary form-control" %>

     </div>
  </div>
</div>

