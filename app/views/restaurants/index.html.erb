<h1 class="text-center">List of Restaurants</h1>
<div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th>Description</th>
              <th>Stars</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @restaurants.each do |restaurant| %>
              <tr class="m-2 border border-light">
                <td class="border border-light"><%= restaurant.name %></td>
                <td class="border border-light"><%= restaurant.address %></td>
                <td class="border border-light"><%= restaurant.phone_number %></td>
                <td class="border border-light"><%= restaurant.category %></td>
                <td class="border border-light btn btn-outline-warning"><%= link_to 'Show', restaurant %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Restaurant', new_restaurant_path, class: "d-flex justify-content-center btn btn-warning btn-lg" %>
      </div>
    </div>
  </div>

