<h1>List of Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Description</th>
      <th>Stars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr class="m-2 border border-primary">
        <td class="border border-primary"><%= restaurant.name %></td>
        <td class="border border-primary"><%= restaurant.address %></td>
        <td class="border border-primary"><%= restaurant.phone_number %></td>
        <td class="border border-primary"><%= restaurant.category %></td>
        <td class="border border-primary"><%= link_to 'Show', restaurant %></td>
        <td class="border border-primary"><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td class="border border-primary"><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Restaurant', new_restaurant_path %>
