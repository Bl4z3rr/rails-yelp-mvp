<h1 class="text-center">New Review</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.submit "Add", class: "btn btn-primary form-control" %>
      <% end %>
      <br>
      <%= link_to "Back", restaurant_path(@restaurant), class: "d-flex justify-content-center btn btn-primary" %>
    </div>
  </div>
</div>
